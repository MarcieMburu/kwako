<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background_color">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="primary_color">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="secondary_color">
        <item name="android:textColor">#121E61</item>
    </style>
    <style name="heading_1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>

    </style>
    <style name="heading_2">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>



    </style>
    <style name="normal_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
    #navbar heading styles
    <style name="navbar_heading">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>

    </style>
    #container Headings in Caps
    <style name="container_heading">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>

    </style>
    #styles for the animation Dialog
    <style name="animation">
        <item name="android:windowEnterAnimation"> @android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>
</resources>